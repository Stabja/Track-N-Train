<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="#eee"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context="com.stabstudio.salesmgmt.Modules.Tasks.UpdateTaskActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editText"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView23"
                android:layout_marginTop="14dp"
                android:background="#fff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/editText2"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/editText"
                android:background="#fff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/editText2"
                android:layout_below="@+id/editText2"
                android:background="#fff"
                android:ems="10"
                android:text="8/16/2017"
                android:paddingRight="15dp"
                android:drawableRight="@drawable/ic_date_range"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/editText3"
                android:layout_below="@+id/editText3"
                android:background="#fff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/editText4"
                android:layout_below="@+id/editText4"
                android:background="#fff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/editText5"
                android:layout_below="@+id/editText5"
                android:background="#fff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/editText7"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/editText6"
                android:layout_below="@+id/editText6"
                android:background="#fff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/editText8"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/editText7"
                android:layout_below="@+id/editText7"
                android:background="#fff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <View
                android:id="@+id/view"
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_above="@+id/editText2"
                android:layout_alignParentEnd="true"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_above="@+id/editText3"
                android:layout_alignParentEnd="true"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_above="@+id/editText4"
                android:layout_alignParentEnd="true"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_above="@+id/editText5"
                android:layout_alignParentEnd="true"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_above="@+id/editText6"
                android:layout_alignParentEnd="true"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_above="@+id/editText7"
                android:layout_alignParentEnd="true"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_above="@+id/editText8"
                android:layout_alignParentEnd="true"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText"
                android:layout_alignBottom="@+id/editText"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/editText"
                android:text="Assigner" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText2"
                android:layout_alignBottom="@+id/editText2"
                android:layout_alignEnd="@+id/textView12"
                android:text="Subject" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText3"
                android:layout_alignBottom="@+id/editText3"
                android:layout_alignEnd="@+id/textView13"
                android:text="Due Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText4"
                android:layout_alignBottom="@+id/editText4"
                android:layout_alignEnd="@+id/textView14"
                android:text="Assignee" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText5"
                android:layout_alignBottom="@+id/editText5"
                android:layout_alignEnd="@+id/textView13"
                android:text="Status" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText6"
                android:layout_alignBottom="@+id/editText6"
                android:layout_alignEnd="@+id/textView16"
                android:text="Priority" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText7"
                android:layout_alignBottom="@+id/editText7"
                android:layout_alignEnd="@+id/textView17"
                android:text="Notification" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText8"
                android:layout_alignBottom="@+id/editText8"
                android:layout_alignEnd="@+id/textView18"
                android:text="Repeat" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/editText"
                android:layout_marginTop="16dp"
                android:text="TASK INFORMATION"
                android:textSize="15dp" />

            <Switch
                android:id="@+id/notification_trigger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText7"
                android:layout_alignBottom="@+id/editText7"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/update_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="UPDATE"
        android:textColor="#fff"
        android:background="@drawable/post_button_back" />

</LinearLayout>