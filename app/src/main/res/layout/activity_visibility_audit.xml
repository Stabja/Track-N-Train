<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <ImageView
            android:id="@+id/visibility_product_image_iv"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:src="@drawable/add_store_image"
            android:padding="5sp"/>

        <TextView
            android:id="@+id/visibility_store_id_tv"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginTop="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:text="Store ID:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/visibility_store_name_tv"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginTop="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:text="Store Name:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Store Owner Name"
                android:paddingLeft="10sp"
                android:id="@+id/visibility_store_owner_et"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Audit Type"
                android:paddingLeft="10sp"
                android:id="@+id/visibility_audit_type_et"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Audit Product Name"
                android:paddingLeft="10sp"
                android:id="@+id/visibility_product_name_et"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/visibility_product_quantity_et"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Quantity"
                android:paddingLeft="10sp"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/visibility_product_type_et"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Audit Product Type"
                android:paddingLeft="10sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Remark"
                android:paddingLeft="10sp"
                android:id="@+id/visibility_audit_remark_et"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:id="@+id/generate_audit_report_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/ll4"
            android:background="@drawable/roundrect">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/scrollLayout1"
                android:gravity="center"
                android:text="GENERATE VISIBILITY AUDIT REPORT"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>