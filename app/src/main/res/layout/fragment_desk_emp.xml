<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.tophawks.vm.visualmerchandising.fragment.DeskEmpFragment">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/desk_emp_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="#fff"
        android:text="VERIFY LOCATION"
        android:background="@drawable/post_button_back"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView5" />

    <ImageView
        android:id="@+id/desk_loc_done_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:src="@drawable/ic_sub_not_done"
        android:layout_above="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button2"
        android:layout_below="@+id/button2"
        android:textColor="#fff"
        android:text="FACIAL RECOGNITION"
        android:background="@drawable/post_button_back"
        android:layout_marginTop="28dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/desk_face_done_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:src="@drawable/ic_sub_not_done"
        android:layout_above="@+id/desk_status"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button3" />

    <ImageView
        android:id="@+id/desk_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/not_done"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/imageView5" />


</RelativeLayout>
