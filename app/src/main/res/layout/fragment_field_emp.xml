<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.tophawks.vm.visualmerchandising.fragment.FieldEmpFragment">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/field_emp_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="#fff"
        android:text="VERIFY LOCATION"
        android:background="@drawable/post_button_back"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView6" />

    <ImageView
        android:id="@+id/field_loc_done_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button4"
        android:src="@drawable/ic_sub_not_done"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:textColor="#fff"
        android:text="FACIAL RECOGNITION"
        android:background="@drawable/post_button_back"
        android:layout_marginTop="28dp"
        android:layout_alignEnd="@+id/button4" />

    <ImageView
        android:id="@+id/field_face_done_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button5"
        android:src="@drawable/ic_sub_not_done"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/field_status"
        android:layout_toEndOf="@+id/button5" />


    <ImageView
        android:id="@+id/field_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/not_done"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/imageView6" />

</RelativeLayout>
