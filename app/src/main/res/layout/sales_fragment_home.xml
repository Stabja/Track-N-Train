<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#eee"
    tools:context="com.tophawks.vm.visualmerchandising.SalesMgmt.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="10dp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:src="@drawable/ic_user_blank" />

                    <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
                        android:id="@+id/datePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="24dp"
                android:text="Events"
                android:textColor="#000"
                android:textSize="17dp" />

            <include layout="@layout/sales_events_home_item" />

            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/events_recyclerview"
                android:scrollbars="vertical"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="24dp"
                android:text="Tasks"
                android:textColor="#000"
                android:textSize="17dp" />

            <include layout="@layout/sales_tasks_home_item" />

            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/tasks_recyclerview"
                android:scrollbars="vertical"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="24dp"
                android:text="Deals"
                android:textColor="#000"
                android:textSize="17dp" />

            <include layout="@layout/sales_deals_home_item" />

            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/deals_recyclerview"
                android:scrollbars="vertical"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>-->

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
